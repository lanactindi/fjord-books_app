<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th><%= t("views.books.title") %></th>
      <th><%= t("views.books.memo") %></th>
      <th><%= t("views.books.author") %></th>
      <th><%= t("views.books.picture") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t("views.actions.show"), book %></td>
        <td><%= link_to t("views.actions.edit"), edit_book_path(book) %></td>
        <td><%= link_to t("views.actions.delete"), book, method: :delete, data: { confirm: t("views.actions.confirmation") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t("views.books.new_book"), new_book_path %>
