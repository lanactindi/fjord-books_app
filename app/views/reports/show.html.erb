<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<p>
  <strong><%= Report.human_attribute_name(:title) %>:</strong>
  <%= @report.title %>
</p>

<p>
  <strong><%= Report.human_attribute_name(:content) %>:</strong>
  <%= @report.content %>
</p>

<p>
  <h1><%= Comment.model_name.human %>:</h1>
<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:user) %></th>
      <th><%= Report.human_attribute_name(:content) %></th>
      <th><%= Report.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render partial: 'comments/comment', collection: @report.comments %>
  </tbody>
</table>
<%= render 'comments/form', commentable: @report %>
</p>

<%= link_to t('views.common.edit'), edit_report_path(@report) %> |
<%= link_to t('views.common.back'), reports_path %>
